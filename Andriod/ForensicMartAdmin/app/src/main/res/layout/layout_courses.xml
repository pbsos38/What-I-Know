<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="20dp"
        app:contentPadding="3dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/apptheme_color"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainView_courses"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:src="@drawable/noimage"
                android:id="@+id/course_image"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/courseName_lay"
                android:focusable="false"
                android:layout_below="@+id/course_image"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:errorEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textNoSuggestions"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:text="name"
                    android:editable="false"
                    android:focusable="false"
                    android:id="@+id/course_name"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_below="@+id/course_image"
                android:id="@+id/course_name"/>-->
<!--            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"-->

            <TextView
                android:id="@+id/details_courses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Details"
                android:textColor="#07D0F3"
                android:layout_below="@+id/courseName_lay"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/details_courses"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:id="@+id/expand_layout"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E1DEDE"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:id="@+id/course_detail_text"/>
            </LinearLayout>



        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>