<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"

        android:layout_marginBottom="10dp"
        card_view:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textStyle="bold"
                android:textSize="10dp"
                android:textAlignment="center"
                android:id="@+id/justtext_retailername_owner_request_result"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Retailer name"
                android:textSize="20dp"
                android:layout_below="@id/justtext_retailername_owner_request_result"
                android:textAlignment="center"
                android:id="@+id/RetailerName_owner_request_result"

                >

            </TextView>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="City"
                android:textStyle="bold"
                android:layout_toRightOf="@id/justtext_retailername_owner_request_result"
                android:textSize="10dp"
                android:textAlignment="center"
                android:id="@+id/justtext_city_owner_request_result"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="City"
                android:layout_below="@id/justtext_city_owner_request_result"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_toRightOf="@id/RetailerName_owner_request_result"
                android:id="@+id/city_owner_request_result"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Firm name"
                android:textStyle="bold"
                android:layout_below="@+id/RetailerName_owner_request_result"
                android:textSize="10dp"
                android:textAlignment="center"
                android:id="@+id/justtext_firmname_owner_request_result"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/justtext_firmname_owner_request_result"
                android:text="Firm Name"
                android:textSize="20dp"
                android:textAlignment="center"
                android:id="@+id/firmname_owner_request_result"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GST No."
                android:textStyle="bold"
                android:layout_below="@+id/firmname_owner_request_result"
                android:textSize="10dp"
                android:textAlignment="center"
                android:id="@+id/justtext_gst_owner_request_result"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/justtext_gst_owner_request_result"
                android:text="GST"
                android:textSize="20dp"
                android:textAlignment="center"
                android:id="@+id/gst_owner_request_result"
                />

            <Button
                android:onClick="doAccept"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_below="@id/gst_owner_request_result"
                android:layout_width="120dp"
                android:layout_marginRight="10dp"
                android:id="@+id/btnAccept_owner_request_result"
                android:text="Accept"
                />
            <Button
                android:layout_height="wrap_content"

                android:onClick="doDecline"
                android:layout_below="@id/gst_owner_request_result"
                android:layout_toRightOf="@id/btnAccept_owner_request_result"
                android:layout_width="120dp"
                android:id="@+id/btnDecline_owner_request_result"
                android:text="Decline" />
            <Button
                android:layout_height="wrap_content"

                android:layout_width="120dp"
                android:onClick="open_Chat_Box"
                android:layout_below="@id/gst_owner_request_result"
                android:layout_toEndOf="@id/btnDecline_owner_request_result"
                android:id="@+id/btnChat_owner_request_result"
                android:text="Chat" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>


