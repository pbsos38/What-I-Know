<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="20dp"
        app:contentPadding="3dp"
        app:strokeColor="@color/apptheme_color"
        app:strokeWidth="2dp"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/commentersImage_comment_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                 />
            <TextView
                android:id="@+id/commentersName_Comment_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/commentersImage_comment_view"
                android:layout_margin="10sp"
                android:textColor="@color/apptheme_color"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#959795"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20sp"
                android:layout_toEndOf="@id/commentersImage_comment_view"
                android:layout_below="@+id/commentersName_Comment_view"
                android:id="@+id/separator"
                />

            <TextView
                android:id="@+id/displayComment_Comment_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:layout_marginStart="60sp"
                android:textColor="@color/apptheme_color"
                android:layout_marginRight="10sp"
                android:layout_below="@+id/separator"
                />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>