<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    app:contentPadding="3dp"
    app:strokeWidth="2dp"
    app:strokeColor="@color/apptheme_color"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:contentPadding="3dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/grey"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="5dp"
            android:id="@+id/image_card_post_webPost"
            card_view:cardUseCompatPadding="true">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:minWidth="100dp"
            android:maxWidth="150dp"

            android:layout_margin="10dp"
            android:id="@+id/bookImage_post_webPost"/>

        </com.google.android.material.card.MaterialCardView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_share_24"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20sp"
            android:layout_marginTop="10sp"
            android:id="@+id/webpostShare"

            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/apptheme_color"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:layout_below="@id/webpostShare"
                android:id="@+id/bookName_post_webpost"
                android:layout_toEndOf="@id/image_card_post_webPost"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/apptheme_color"
                android:layout_margin="10dp"
                android:id="@+id/author_post_webpost"
                android:textSize="12sp"
                android:layout_below="@id/bookName_post_webpost"
                android:layout_toEndOf="@id/image_card_post_webPost"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View"
            android:id="@+id/view_book_post_webPost"
            style="@style/style_button"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/author_post_webpost"
            />

        <Button
            android:id="@+id/open_book_post_webPost"
            style="@style/style_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@id/view_book_post_webPost"
            android:layout_alignParentEnd="true"
            android:text="open" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>