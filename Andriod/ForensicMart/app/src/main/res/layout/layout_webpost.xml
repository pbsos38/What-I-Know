<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10sp"
    xmlns:card_view="http://schemas.android.com/tools">
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    app:contentPadding="3dp"
    app:strokeColor="@color/apptheme_color"
    app:strokeWidth="2dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/webpostImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/noimage" />
<!--user's name-->
    <TextView
        android:id="@+id/webpostUserName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/webpostImage"
        android:textColor="@color/apptheme_color"
        android:textSize="20sp"
        android:textStyle="bold" />
<ImageView
    android:layout_width="30sp"
    android:layout_height="30sp"
    android:src="@drawable/ic_baseline_comment_24"
    android:layout_alignParentEnd="true"
    android:layout_margin="10dp"
    android:id="@+id/dropMessage_webpost"
    />
        <!--date Created-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_toEndOf="@id/webpostImage"
        android:layout_below="@id/webpostUserName"
        android:layout_marginStart="20dp"
        android:id="@+id/webpostDatacreated"/>
        <!--type-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_below="@id/webpostImage"
        android:layout_margin="10dp"
        android:id="@+id/webpostType"/>
    <!--country-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_below="@id/webpostImage"
        android:layout_toEndOf="@id/webpostType"
        android:layout_margin="10dp"
        android:id="@+id/webpostCountry"/>
        <!--Title-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/apptheme_color"
        android:textStyle="bold"
        android:layout_below="@id/webpostType"
        android:layout_margin="10dp"
        android:id="@+id/webpostTitle"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/webpostTitle"
        android:minHeight="200dp"
        android:maxHeight="300dp"
        android:src="@drawable/noimage"
        android:id="@+id/webpostPostImage"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/apptheme_color"
        android:layout_below="@id/webpostPostImage"
        android:layout_margin="10dp"
        android:id="@+id/webpostDetails"/>

<!--
    <io.github.ponnamkarthik.richlinkpreview.RichLinkView
        android:id="@+id/richLinkView"
        android:layout_below="@id/webpostDetails"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"/>
-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visit link"
        android:textStyle="bold"
        android:layout_marginRight="10sp"
        android:textColor="#397BF3"
        android:layout_below="@id/webpostDetails"
        android:layout_alignParentEnd="true"
        android:id="@+id/visitlink_webpost"
        android:visibility="gone"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:layout_below="@id/visitlink_webpost"
        android:src="@drawable/ic_baseline_thumb_up_24"
        android:id="@+id/webpostLikeImage"/>
<!--LIKE-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/visitlink_webpost"
        android:layout_toEndOf="@id/webpostLikeImage"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/webpostLikeText"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:layout_toEndOf="@id/webpostLikeText"
        android:layout_below="@id/visitlink_webpost"
        android:src="@drawable/ic_baseline_add_comment_24"
        android:id="@+id/webpostCommentImage"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment"
        android:layout_below="@id/visitlink_webpost"
        android:layout_toEndOf="@id/webpostCommentImage"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/webpostCommentText"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_share_24"
        android:layout_alignParentEnd="true"
        android:layout_margin="10sp"
        android:layout_below="@id/visitlink_webpost"
        android:id="@+id/webpostShare"

        />


</RelativeLayout>
</com.google.android.material.card.MaterialCardView></LinearLayout>