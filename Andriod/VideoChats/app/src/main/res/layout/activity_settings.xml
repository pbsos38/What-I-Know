<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/back"
    tools:context=".Settings">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/profile_image"
        android:id="@+id/setting_profile_image"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username_settings"
        android:drawableLeft="@drawable/edit_profile"
        android:drawableTint="#FFFFFF"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:hint="Enter name"
        android:textColorHint="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:layout_below="@id/setting_profile_image"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bio_setting"
        android:drawableLeft="@drawable/edit_status"
        android:drawableTint="#FFFFFF"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:backgroundTint="#FFFFFF"
        android:hint="Enter Bio"
        android:textColorHint="#FFFFFF"
        android:layout_below="@id/username_settings"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/save_setting_btn"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:text="Save"
        android:layout_below="@id/bio_setting"/>
</RelativeLayout>